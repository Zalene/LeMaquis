{% extends 'base.html.twig' %}

{% block body %}

{% include 'parts/menu.html.twig' %}

<div class="container">
    <h1 class="text-center">Connexion</h1>
</div>
<div class="form-inscription container">
    <form action={{ path('security_login') }} method="post">
        <div class="form-group">
            <div class="form-group">
                <input placeholder="Adresse email ..." required name="_username" type="text" class="form-control">
            </div>
            <div class="form-group">
                <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-login">Connexion</button>
            </div>
        </div>
    </form>
</div>

{% endblock %}