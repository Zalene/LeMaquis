{% extends 'base.html.twig' %}

{% block body %}

{% include 'parts/menu.html.twig' %}

<div class="container">
    <h1 class="text-center">Inscription</h1>
</div>
<div class="form-inscription container">
    {{ form_start(form) }}

    {{ form_row(form.username, {'label': "Nom d\'utilisateur"}) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password, {'label': "Mot de passe"}) }}
    {{ form_row(form.confirm_password, {'label': "Confirmation du mot de passe"}) }}
    <button class="btn btn-success">Inscription</button>

    {{ form_end(form) }}
</div>

{% endblock %}