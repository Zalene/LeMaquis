{% extends 'base.html.twig' %}

{% block title %}Contactez-nous - Le Maquis Label{% endblock %}

{% block body %}
<section class="mb-4 container-contact">
    <!--Section heading-->
    <h1 class="h1-responsive font-weight-bold text-center my-4">Contactez-nous</h1>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5">Vous avez des questions ? Vous pouvez nous contacter par téléphone ou par email et nous vous répondrons dans les plus brefs délais.</p>

    

    <div class="row">
        <!-- Block form -->
        <div class="col-md-9 mb-md-0 mb-5">
            {{ form_start(contactForm) }}
                <div class="row">
                    <div class="col-md-6 contact-input">
                        <div>
                            {{ form_label(contactForm.firstname, 'Votre prénom') }}
                        </div>
                        <div class="text-justify">
                            {{ form_widget(contactForm.firstname) }}
                        </div>
                    </div>

                    <div class="col-md-6 contact-input">
                        <div>
                            {{ form_label(contactForm.lastname, 'Votre nom') }}
                        </div>
                        <div>
                            {{ form_widget(contactForm.lastname) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 contact-input">
                        <div>
                            {{ form_label(contactForm.phone, 'Votre téléphone') }}
                        </div>
                        <div>
                            {{ form_widget(contactForm.phone) }}
                        </div>
                    </div>

                    <div class="col-md-6 contact-input">
                        <div>
                            {{ form_label(contactForm.email, 'Votre email') }}
                        </div>
                        <div>
                            {{ form_widget(contactForm.email) }}
                        </div>
                    </div>
                </div>

                <div class="row">                    
                    <div class="col-md-12 contact-input">
                        <div>
                            {{ form_label(contactForm.message, 'Votre message') }}
                        </div>
                        <div>
                            {{ form_widget(contactForm.message) }}
                        </div>
                    </div>
                </div>
            
            <div class="text-center text-md-left">
                <a class="btn btn-primary" onclick="document.getElementById('contact-form').submit();">Envoyer</a>
            </div>
            {{ form_end(contactForm) }}
        </div>
        <!-- Block informations -->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li><i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>Dijon, 21000, FR</p>
                </li>

                <li><i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+33 6 00 00 00 00</p>
                </li>

                <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>lemaquilabel@gmail.com</p>
                </li>
            </ul>
        </div>
    </div>
</section>
{% endblock %}